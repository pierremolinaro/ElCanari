#  outlet CanariDimensionTextField mMinPP_TP_TT_TW_displayUnit_TextField
#     $dimensionAndUnit root.minPP_TP_TT_TW_inEBUnit, root.minPP_TP_TT_TW_displayUnit
#  ;
#
